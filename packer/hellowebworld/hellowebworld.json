{
  "builders": [
        {
            "type": "docker",
            "image": "debian:wheezy",
            "export_path": "hellowebworld.tar"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apt-get update",
                "apt-get -y install python"
            ]
        },
        {
          "type": "file",
          "source": "hellowebworld.py",
          "destination": "/srv/hellowebworld.py"
        }
    ]
}
