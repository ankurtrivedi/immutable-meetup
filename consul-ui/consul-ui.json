{
  "builders": [
    {
      "type": "docker",
      "image": "consul:dns",
      "export_path": "consul-ui.tar",
      "pull": false
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "wget --no-check-certificate https://dl.bintray.com/mitchellh/consul/0.3.1_web_ui.zip",
        "mkdir ui",
        "unzip 0.3.1_web_ui.zip -d /opt/ui",
        "rm 0.3.1_web_ui.zip"
      ]
    }
  ]
}
